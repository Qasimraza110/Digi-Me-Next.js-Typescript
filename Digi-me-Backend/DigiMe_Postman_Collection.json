            "url": {
              "raw": "{{api_url}}/profile/me",
              "host": ["{{api_url}}"],
              "path": ["profile", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Update My Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newusername\",\n  \"bio\": \"This is my updated bio\",\n  \"phone\": \"+1234567890\",\n  \"socialLinks\": {\n    \"facebook\": \"https://facebook.com/username\",\n    \"instagram\": \"https://instagram.com/username\",\n    \"linkedin\": \"https://linkedin.com/in/username\",\n    \"whatsapp\": \"+1234567890\",\n    \"website\": \"https://mywebsite.com\"\n  },\n  \"businessLinks\": [\"https://business1.com\", \"https://business2.com\"]\n}"
            },
            "url": {
              "raw": "{{api_url}}/profile/me",
              "host": ["{{api_url}}"],
              "path": ["profile", "me"]
            }
          },
          "response": []
        },
        {
          "name": "Update Profile with Avatar",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "avatar",
                  "type": "file",
                  "src": []
                },
                {
                  "key": "username",
                  "value": "newusername",
                  "type": "text"
                },
                {
                  "key": "bio",
                  "value": "Updated bio with avatar",
                  "type": "text"
                }
              ]
            },
            "url": {
              "raw": "{{api_url}}/profile/me",
              "host": ["{{api_url}}"],
              "path": ["profile", "me"]
            }
          },
          "response": []
